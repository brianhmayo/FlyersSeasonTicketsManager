/* navbar */
.navbar-default
    background-color: #f87e2c
    border-color: #e73308

/* title */
.navbar-default .navbar-brand
    color: #777

.navbar-default .navbar-brand:hover,
.navbar-default .navbar-brand:focus
    color: #5E5E5E

/* link */
.navbar-default .navbar-nav
    li
        a
            color: #777

.navbar-default .navbar-nav
    li
        a:hover
            color: #333

.navbar-default .navbar-nav
    li
        a:focus
            color: #333

.navbar-default .navbar-nav
    .active
        a
            color: #555
            background-color: #f87e2c

.navbar-default .navbar-nav
    .active
        a:hover
            color: #555
            background-color: #f87e2c

.navbar-default .navbar-nav
    .active
        a:focus
            color: #555
            background-color: #f87e2c

.navbar-default .navbar-nav
    .open
        a
            color: #555
            background-color: #f87e2c

.navbar-default .navbar-nav
    .open
        a:hover
            color: #555
            background-color: #f87e2c
.navbar-default .navbar-nav
    .open
        a:focus
            color: #555
            background-color: #f87e2c

/* caret */
.navbar-default .navbar-nav
    .dropdown
        a .caret
            border-top-color: #777
            border-bottom-color: #777

.navbar-default .navbar-nav
    .dropdown
        a:hover .caret
            border-top-color: #333
            border-bottom-color: #333

.navbar-default .navbar-nav
    .dropdown
        a:focus .caret
            border-top-color: #333
            border-bottom-color: #333

.navbar-default .navbar-nav
    .open
        a .caret
            border-top-color: #555
            border-bottom-color: #555

.navbar-default .navbar-nav
    .open
        a:hover .caret
            border-top-color: #555
            border-bottom-color: #555

.navbar-default .navbar-nav
    .open
        a:focus .caret
            border-top-color: #555
            border-bottom-color: #555